SELECT 
    b.id AS budget_id, 
    b.name AS budget_name, 
    b.amount AS budget_amount, 
    b.created_at AS budget_created_at, 
    t.id AS transaction_id, 
    t.transaction_type, 
    t.transaction_date, 
    t.transaction_amount, 
    t.transaction_id AS transaction_transaction_id, 
    t.transaction_name, 
    t.transaction_memo, 
    t.created_at AS transaction_created_at, 
    t.bank_name, 
    t.transaction_type_id 
FROM 
    budget b 
LEFT JOIN 
    transactions t 
ON 
    b.id = t.budget_item_id
